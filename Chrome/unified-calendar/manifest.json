{
  "manifest_version": 3,
  "name": "Unified Calendar",
  "version": "0.1.0",
  "description": "Unified calendar view across multiple Gmail accounts with privacy-safe meeting detection",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "notifications",
    "downloads"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://calendar.google.com/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "public/icons/icon16.png",
      "32": "public/icons/icon32.png",
      "48": "public/icons/icon48.png",
      "128": "public/icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["src/content/gmail-adapter.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://calendar.google.com/*"],
      "js": ["src/content/calendar-setup.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/calendar-view/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "public/icons/icon16.png",
    "32": "public/icons/icon32.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  }
}
