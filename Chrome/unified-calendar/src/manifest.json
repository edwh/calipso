{
  "manifest_version": 3,
  "name": "Calipso Calendar",
  "version": "0.1.0",
  "description": "Unified calendar view across multiple Gmail accounts with privacy-safe meeting detection",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "activeTab",
    "notifications",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://calendar.google.com/*",
    "https://outlook.live.com/*",
    "https://outlook.office.com/*",
    "https://outlook.office365.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "../public/icons/icon16.png",
      "32": "../public/icons/icon32.png",
      "48": "../public/icons/icon48.png",
      "128": "../public/icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content/gmail-adapter.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://calendar.google.com/*"],
      "js": ["content/calendar-setup.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://outlook.live.com/*",
        "https://outlook.office.com/*",
        "https://outlook.office365.com/*"
      ],
      "js": ["content/outlook-calendar-adapter.js", "content/outlook-email-adapter.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["calendar-view/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "../public/icons/icon16.png",
    "32": "../public/icons/icon32.png",
    "48": "../public/icons/icon48.png",
    "128": "../public/icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; default-src 'self' data:; connect-src 'self' data: https://huggingface.co https://*.huggingface.co https://*.hf.co https://*.xethub.hf.co https://raw.githubusercontent.com"
  }
}
